<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".noteDetailActivity">

    <EditText
        android:id="@+id/noteTitleView"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ef7c7c"
        android:elevation="4dp"
        android:ems="10"
        android:gravity="left|center_vertical"
        android:hint="Note Title"
        android:inputType="text|textCapWords"
        android:paddingLeft="2dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.anuj.notes.LinedEditText
        android:id="@+id/noteDetailView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f5fcb2c3"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Add Your Note...."
        android:inputType="textCapSentences|textMultiLine|textImeMultiLine"
        android:paddingLeft="2dp"
        android:paddingTop="16dp"
        android:scrollbars="vertical"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noteTitleView"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>